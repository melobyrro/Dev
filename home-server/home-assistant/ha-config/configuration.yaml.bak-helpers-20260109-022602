      - name: "Patio Dew Point"
        unique_id: patio_dew_point
        unit_of_measurement: "Â°F"
        device_class: temperature
        state: >-
          {% set rh = states('sensor.patio_temp_sensor_humidity') | float(none) %}
          {% set t = states('sensor.patio_temp_sensor_temperature') | float(none) %}
          {% if rh is none or t is none or rh <= 0 or rh > 100 %}
            unknown
          {% else %}
            {% set unit = state_attr('sensor.patio_temp_sensor_temperature', 'unit_of_measurement') %}
            {% set t_c = ((t - 32) * 5 / 9) if unit in ['Â°F', 'F', 'Â°f'] else t %}
            {% set dp_c = dewpoint(t_c, rh) %}
            {% set dp_f = (dp_c * 9 / 5) + 32 %}
            {{ dp_f | round(1) }}
          {% endif %}
        attributes:
          source_temperature: "{{ states('sensor.patio_temp_sensor_temperature') }}"
          source_humidity: "{{ states('sensor.patio_temp_sensor_humidity') }}"

