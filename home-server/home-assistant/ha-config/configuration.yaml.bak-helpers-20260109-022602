      - name: "Proxmox Uptime"
        icon: mdi:clock-outline
        state: >-
          {% set raw = states('sensor.proxmox_uptime_days') %}
          {% if raw in ['unknown', 'unavailable', 'none'] %}
            unknown
          {% else %}
            {% set total = (raw | float(0) * 86400) | int %}
            {% set d = total // 86400 %}
            {% set h = (total % 86400) // 3600 %}
            {% set m = (total % 3600) // 60 %}
            {{ d }}d {{ h }}h {{ m }}m
