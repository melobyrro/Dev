  external_url: https://home.byrroserver.com
  internal_url: http://192.168.1.11:8123

# Loads default set of integrations. Do not remove.
default_config:

# HTTP settings for reverse proxy
http:
  use_x_forwarded_for: true
  trusted_proxies:
    - 127.0.0.1
    - 192.168.1.0/24
    - 172.16.0.0/12
    - 172.18.0.0/16
    - 10.0.0.0/8


