services:
  sonarr:
    image: lscr.io/linuxserver/sonarr:latest
    container_name: sonarr
    restart: unless-stopped
    ports:
      - "8989:8989"
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/New_York
      - UMASK=002
      - DOCKER_MODS=ghcr.io/linuxserver/mods:universal-package-install
      - INSTALL_PACKAGES=ffmpeg
    volumes:
      - /opt/appdata/sonarr:/config
      - /mnt/ByrroServer/ByrroMedia/ByrroMedia:/data
      - /mnt/ByrroServer/ByrroMedia/ByrroMedia/downloads:/downloads
    networks:
      - byrro-net

networks:
  byrro-net:
    external: true
