services:
  radarr:
    image: lscr.io/linuxserver/radarr:latest
    container_name: radarr
    restart: unless-stopped
    ports:
      - "7878:7878"
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=America/New_York
      - UMASK=002
    volumes:
      - /opt/appdata/radarr:/config
      - /mnt/ByrroServer/ByrroMedia:/data
      - /mnt/ByrroServer/ByrroMedia/downloads:/downloads
    networks:
      - byrro-net

networks:
  byrro-net:
    external: true
